<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tt.ui.activities.MotionLayoutActivity"
    app:layoutDescription="@xml/activity_motion_layout_scene">

    <FrameLayout
        android:id="@+id/textViewContainer"
        android:layout_width="match_parent"
        android:background="@drawable/framebg"
        android:layout_height="match_parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/swipeLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#175416" />

        <TextView
            android:id="@+id/tvHelloWorld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:text="Geeks for Geeks!"
            app:layout_constraintBottom_toBottomOf="@id/textViewContainer"
            app:layout_constraintLeft_toLeftOf="@+id/textViewContainer"
            app:layout_constraintRight_toRightOf="@+id/textViewContainer"
            app:layout_constraintTop_toTopOf="@id/textViewContainer" />



</androidx.constraintlayout.motion.widget.MotionLayout>