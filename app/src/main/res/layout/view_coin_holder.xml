<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/gem_coin_radius_corner">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_top_coin"
            android:layout_width="@dimen/gem_image_width"
            android:layout_height="@dimen/gem_image_height"
            android:layout_marginLeft="@dimen/gem_image_left_margin"
            android:layout_marginTop="@dimen/gem_image_top_margin"
            android:src="@drawable/ic_diamond_svgrepo_com__2_"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="@dimen/prize_width"
            android:layout_height="@dimen/gem_image_height"
            android:layout_marginLeft="@dimen/prize_margin_left"
            android:layout_marginTop="@dimen/gem_image_top_margin"
            android:background="@color/blue"
            android:text="100"
            android:textColor="@color/black"
            android:textSize="@dimen/gem_txt_size"
            app:layout_constraintLeft_toLeftOf="@+id/iv_top_coin"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_middle_coin"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/ic_coin_stack_svgrepo_com"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>


        <ImageView
            android:id="@+id/iv_gem"
            android:layout_width="@dimen/gem_image_width"
            android:layout_height="@dimen/gem_image_height"
            android:layout_marginTop="@dimen/gem_middle_margin_top"
            android:src="@drawable/ic_diamond_svgrepo_com__2_"
            android:layout_marginLeft="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_middle_coin"
            app:layout_constraintVertical_bias="0.0"></ImageView>

        <TextView
            android:id="@+id/tv_mmk_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="@dimen/gem_middle_margin_top"
            android:text="200,000"
            android:textColor="@color/black"
            android:textSize="@dimen/gem_txt_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
           />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>