<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tt.ui.activities.SettingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_setting"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:titleTextColor="@color/white">

               <ImageView
                   android:id="@+id/iv_toolbar_back_arrow"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_baseline_arrow_back_24"/>
                <TextView
                    android:id="@+id/tv_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Setting"
                    android:textColor="@color/white"
                    android:layout_marginLeft="50dp"/>
            </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <!--edit profile layout -->
    <LinearLayout
        android:id="@+id/ll_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="15dp">
        <ImageView
            android:id="@+id/iv_edit_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/money" />

        <TextView
            android:id="@+id/tv_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Edit Profile"
            android:gravity="left|center_vertical"
            android:textColor="@color/primary_dark"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:textSize="40px" />

    </LinearLayout>

    <!--add banking detail layout -->
    <LinearLayout
        android:id="@+id/ll_add_banking_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="15dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_account_balance_24" />

        <TextView
            android:id="@+id/tv_add_banking_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Add Banking Details"
            android:gravity="left|center_vertical"
            android:textColor="@color/primary_dark"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:textSize="40px" />

    </LinearLayout>

    <!--add certificate layout -->
    <LinearLayout
        android:id="@+id/ll_add_certificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="15dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/money" />

        <TextView
            android:id="@+id/tv_add_certificate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Add Certificate"
            android:gravity="left|center_vertical"
            android:textColor="@color/primary_dark"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:textSize="40px" />

    </LinearLayout>

    <!--add_financial_report layout -->
    <LinearLayout
        android:id="@+id/ll_add_financial_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="15dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:src="@drawable/money" />

        <TextView
            android:id="@+id/tv_add_financial_report"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Add Financial Report Statement"
            android:gravity="left|center_vertical"
            android:textColor="@color/primary_dark"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:textSize="40px" />

    </LinearLayout>

    <!--add manage posts layout -->
    <LinearLayout
        android:id="@+id/ll_manage_posts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="15dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/money" />

        <TextView
            android:id="@+id/tv_manage_posts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Manage Posts"
            android:gravity="left|center_vertical"
            android:textColor="@color/primary_dark"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:textSize="40px" />

    </LinearLayout>

    <!-- manage account layout -->
    <LinearLayout
        android:id="@+id/ll_manage_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="15dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/account"/>

        <TextView
            android:id="@+id/tv_manage_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Manage Account"
            android:gravity="left|center_vertical"
            android:textColor="@color/primary_dark"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:textSize="40px" />

    </LinearLayout>


</LinearLayout>