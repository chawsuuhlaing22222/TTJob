<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="100dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_top_gem"
            android:layout_width="@dimen/gem_image_width"
            android:layout_height="15dp"
            android:layout_marginLeft="@dimen/gem_image_left_margin"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_diamond_svgrepo_com__2_"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <TextView
            android:id="@+id/tv_gem_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="100"
            android:textColor="@color/black"
            android:textSize="@dimen/child_text_size"
            app:layout_constraintLeft_toRightOf="@+id/iv_top_gem"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_best_value"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/best_value_height"
            android:background="#FFD700"
            android:text="Best Value"
            android:textColor="@color/white"
            android:textSize="@dimen/child_text_size"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_middle_gem"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/gem_image_height"
            android:layout_margin="@dimen/gem_middle_margin_top"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:src="@drawable/ic_diamond_svgrepo_com__2_"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_middle_gem_1"
                android:layout_width="@dimen/gem_image_width"
                android:layout_height="@dimen/gem_image_height"
                android:src="@drawable/ic_diamond_svgrepo_com__2_"></ImageView>

            <ImageView
                android:id="@+id/iv_middle_gem_2"
                android:layout_width="@dimen/gem_image_width"
                android:layout_height="@dimen/gem_image_height"
                android:src="@drawable/ic_diamond_svgrepo_com__2_"></ImageView>

            <ImageView
                android:id="@+id/iv_middle_gem_3"
                android:layout_width="@dimen/gem_image_width"
                android:layout_height="@dimen/gem_image_height"
                android:src="@drawable/ic_diamond_svgrepo_com__2_"></ImageView>

            <ImageView
                android:id="@+id/iv_middle_gem_4"
                android:layout_width="@dimen/gem_image_width"
                android:layout_height="@dimen/gem_image_height"
                android:src="@drawable/ic_diamond_svgrepo_com__2_"></ImageView>

            <ImageView
                android:id="@+id/iv_middle_gem_5"
                android:layout_width="@dimen/gem_image_width"
                android:layout_height="@dimen/gem_image_height"
                android:src="@drawable/ic_diamond_svgrepo_com__2_"></ImageView>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_mmk"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="@dimen/gem_middle_margin_top"
            android:text="MMK"
            android:textColor="@color/black"
            android:textSize="@dimen/child_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_mmk_price"

            app:layout_constraintTop_toBottomOf="@id/ll_middle_gem" />


        <TextView
            android:id="@+id/tv_mmk_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gem_middle_margin_top"
            android:layout_marginRight="5dp"
            android:text="200,000"
            android:textColor="@color/black"
            android:textSize="@dimen/child_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_middle_gem" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>